                @Html.DisplayFor(modelItem => item.FileUrl3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileUrl4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileUrl5)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pet.Breed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FamilyMember.FamilyMemberId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WalkHistoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WalkHistoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WalkHistoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
